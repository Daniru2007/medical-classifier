generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

model Course {
  id          String   @id
  title       String
  description String
  lessons     Lesson[]
}

model Lesson {
  id       String @id
  title    String
  content  String
  courseId String
  course   Course @relation(fields: [courseId], references: [id])

  @@index([courseId], map: "Lesson_courseId_fkey")
}
